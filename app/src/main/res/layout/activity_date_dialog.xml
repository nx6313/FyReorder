<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.fy.niu.fyreorder.DateDialogActivity">

    <cn.aigestudio.datepicker.views.DatePicker
        android:id="@+id/asDatePicker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></cn.aigestudio.datepicker.views.DatePicker>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/menu_item_style_2"
            android:gravity="center"
            android:onClick="cancelSelectDate"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="取消选择"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/menu_item_style_2"
            android:gravity="center"
            android:onClick="clearSelectDate"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="清除选择"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/menu_item_style_2"
            android:gravity="center"
            android:onClick="sureSelectDate"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="确定选择"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
