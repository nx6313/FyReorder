<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_user_center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.fy.niu.fyreorder.MainActivity">

    <LinearLayout
        android:id="@+id/orderUserBgLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/order_user_bg"
        android:paddingTop="42dp"
        android:paddingBottom="20dp"
        android:orientation="vertical">

        <com.fy.niu.fyreorder.customView.CircularImage
            android:id="@+id/userHeadImg"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/leftMenuUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="#292929"
            android:textSize="18sp"
            android:text="姓名"/>
    </LinearLayout>
</RelativeLayout>
