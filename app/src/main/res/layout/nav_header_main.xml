<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_user_center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.fy.niu.fyreorder.MainActivity">

    <LinearLayout
        android:id="@+id/orderUserBgLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/order_user_bg"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingTop="42dp">

        <com.fy.niu.fyreorder.customView.CircularImage
            android:id="@+id/userHeadImg"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants" />

        <TextView
            android:id="@+id/leftMenuUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:tag="initLoginUserInfo"
            android:text="初始化用户信息中..."
            android:textColor="#292929"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/leftMenuUserType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:tag="initLoginUserType"
            android:text="[...]"
            android:textColor="#5c5c5c"
            android:textSize="13sp" />
    </LinearLayout>
</RelativeLayout>
